<ul class="random-beers">


        {{#each responseFromAPI}}

        <img src='{{this.image_url}}' alt='Beers'>

        <h1>{{this.name}}</h1>

        <p>{{this.description}}</p>

        <h5>{{this.tagline}}</h5>
        {{/each}}

        <h2>Food pairing </h2>

        {{#each this.food_pairing}}

        <li>{{this}}</li>

        {{/each}}
        <p><b>Brewers Tips:</b>{{this.brewers_tips}}</p>


        </ul>

        

